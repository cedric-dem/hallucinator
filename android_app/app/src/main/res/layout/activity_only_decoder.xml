<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_generate_array"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="generate" />


    <TextView
        android:id="@+id/text_generated_array"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="input" />

    <Button
        android:id="@+id/button_apply_decoder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="apply" />

    <ImageView
        android:id="@+id/image_decoder_output"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="image generated by the decoder"
        android:scaleType="fitCenter" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/partial_bottom_navigation" />
</LinearLayout>