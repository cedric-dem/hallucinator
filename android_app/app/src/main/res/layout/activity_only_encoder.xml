<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/encoder_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_background"
        android:orientation="vertical"
        android:weightSum="4">


        <Button
            android:id="@+id/button_select_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/surface_dark"
            android:textColor="@color/white"
            android:text="@string/select_photo_from_gallery" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/darker_darker_gray"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_apply_model"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:enabled="false"
            android:backgroundTint="@color/surface_dark"
            android:textColor="@color/white"
            android:text="@string/apply_model_button" />

        <TextView
            android:id="@+id/text_model_output"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/output_will_appear_here_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/partial_bottom_navigation" />
</LinearLayout>